@model  T1809E_PROJECT_SEM3.Models.ClientViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared_Client/_Layout.cshtml";
}

    <div class="hero-wrap js-fullheight" style="background-image: url('https://media-exp1.licdn.com/dms/image/C511BAQHvkpAG-LIXFw/company-background_10000/0?e=2159024400&v=beta&t=RGUtgDiUSBPH20Fx9VhzeAtQ_7okXj6V3cdqXhYmvjs'); ">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-start" data-scrollax-parent="true">
                <div class="col-md-9 ftco-animate" data-scrollax=" properties: { translateY: '70%' }">
                    <h1 class="mb-4" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><strong>Recover<br></strong> your lost of <u>information</u></h1>
                    <p data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">A great way to keep track of your packages anywhere</p>
                    <div class="block-17 my-4">
                        <form action="" method="post" class="d-block d-flex">
                            <div class="fields d-block d-flex">
                                <div class="textfield-search">
                                    <input type="text" class="form-control" placeholder="Package ID. . .">
                                </div>
                            </div>
                            <input type="submit" class="search-submit btn btn-primary" value="Search">
                        </form>
                    </div>
                    <p>Or browse the following</p>
                    <p class="browse d-md-flex">
                        <span class="d-flex justify-content-md-center align-items-md-center"><a href="#"><i class="fa fa-suitcase"></i>Offices</a></span>
                        <span class="d-flex justify-content-md-center align-items-md-center"><a href="#"><i class="fa fa-building-o"></i>Services</a></span>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <section class="ftco-section ftco-destination">
        <div class="container">
            <div class="row justify-content-start mb-5 pb-3">
                <div class="col-md-7 heading-section ftco-animate">
                    <span class="subheading">Featured</span>
                    <h2 class="mb-4"><strong>Featured</strong> Offices</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="destination-slider owl-carousel ftco-animate">
                        @foreach (var o in Model.Offices)
                        {
                            <div class="item">
                                <div class="destination">
                                    <a href="#" class="img d-flex justify-content-center align-items-center" style="background-image: url('https://www.kindpng.com/picc/m/354-3545228_null-deployment-white-icons-png-transparent-png.png');">
                                        <div class="icon d-flex justify-content-center align-items-center">
                                            <span class="icon-search2"></span>
                                        </div>
                                    </a>
                                    <div class="text p-3">
                                        <h3><a href="#">@o.Name</a></h3>
                                        <span class="listing">
                                            <p>Pincode: @o.PinCode</p>
                                            <p>Located in @o.Province.</p>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="ftco-section bg-light">
        <div class="container">
            <div class="row justify-content-start mb-5 pb-3">
                <div class="col-md-7 heading-section ftco-animate">
                    <span class="subheading">featured</span>
                    <h2><strong>Featured</strong> Services</h2>
                </div>
            </div>
            <div class="row d-flex">
                @foreach (var s in Model.Services)
                {
                    <div class="col-md-3 ftco-animate">
                        <div class="blog-entry align-self-stretch">
                            <a href="blog-single.html" class="block-20" style="background-image: url('https://www.kindpng.com/picc/m/354-3545228_null-deployment-white-icons-png-transparent-png.png'); ">
                            </a>
                            <div class="text p-4 d-block">
                                <h3 class="heading mt-3"><a href="#">@s.Type</a></h3>
                                <div class="meta mb-3">
                                    <div class="listing">
@*                                         @{ *@
@*                                             var descTrim = s.Description.Substring(0, 100); *@
@*                                             @Html.DisplayFor(t => descTrim) *@
@*                                         } *@
                                        ...
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

