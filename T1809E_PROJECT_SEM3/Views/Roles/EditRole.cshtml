@model Microsoft.AspNet.Identity.EntityFramework.IdentityUser

@{
    ViewBag.Title = "Edit User Role";
}

@using (Html.BeginForm("EditRole", "Roles", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.Label("User Name", new { @class = "control-label col-md-2" })
        <select class="form-control m-bot15" id="UserName" name="UserName">
            <option value="@Model.UserName">@Model.UserName</option>
            
        </select>
    </div>
    <div class="form-group">
        @Html.Label("Select Role", new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.DropDownList("RoleName", null, new { @class = "form-control m-bot15" })
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Add Role" class="btn btn-primary" />
    </div>
}