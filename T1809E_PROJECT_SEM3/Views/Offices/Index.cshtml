@model IEnumerable<T1809E_PROJECT_SEM3.Models.Office>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared_Admin/_Layout.cshtml";
}

    <div class="wrapper">
        <div class="row">
            <div class="col-sm-12">
                <section class="panel">
                    <header class="panel-heading">
                        Service Table
                    </header>
                    <div class="panel-body">
                        <div class="card">
                            <div class="card-body">

                                @using (Html.BeginForm("Index", "Offices", FormMethod.Get, new { @name = "search-form" }))
                                {
                                    <div class="row">
                                        <div class="col-lg-3 col-md-5">
                                            <p class="padding">
                                                Search By Keyword
                                            </p>
                                            <div class="input-group m-bot15">
                                                <span class="input-group-btn">
                                                    <button class="btn btn-default" type="submit" style="height:34px"> Search <i class="fa fa-search"></i></button>
                                                </span>
                                                @Html.TextBox("SearchStringName", ViewBag.CurrentFilter as string, new { @class = "form-control", @placeholder = "Name. . . " })
                                            </div>
                                        </div>
                                    
                                    </div>
                                }

                                <p class="btn btn-outline-primary">
                                    @Html.ActionLink("Create New +", "Create")
                                </p>
                                <table class="table">
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.PinCode)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Email)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.VAT)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.PhoneNumber)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Address)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.District)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Province)
                                        </th>
                                        <th></th>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PinCode)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Email)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.VAT)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Address)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.District)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Province)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                            </td>
                                        </tr>
                                    }

                                </table>

                            </div>

                        </div>

                    </div>

                </section>

            </div>

        </div>
    </div>


