@model PagedList.IPagedList<T1809E_PROJECT_SEM3.Models.Order>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared_Admin/_Layout.cshtml";
}

<div class="content">
    <!-- Animated -->
    <div class="animated fadeIn">
        <!-- Widgets  -->
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="card">
                    <div class="card-body">
                        <div class="stat-widget-five">
                            <div class="stat-icon dib flat-color-1">
                                <i class="pe-7s-cash"></i>
                            </div>
                            <div class="stat-content">
                                <div class="text-left dib">
                                    <div class="stat-text">$ @ViewBag.TotalRevenue</div>
                                    <div class="stat-heading">Revenue Today</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-md-6">
                <div class="card">
                    <div class="card-body">
                        <div class="stat-widget-five">
                            <div class="stat-icon dib flat-color-2">
                                <i class="pe-7s-cart"></i>
                            </div>
                            <div class="stat-content">
                                <div class="text-left dib">
                                    <div class="stat-text">@ViewBag.TotalOrderDay</div>
                                    <div class="stat-heading">Order Today</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /Widgets -->
        <div class="clearfix"></div>
        <!-- Orders -->
        <div class="orders">
            <div class="row">
                <div class="col-xl-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="box-title">Orders for today</h4>
                        </div>
                        <div class="card-body--">
                            @if (Model.Count == 0)
                            {
                                <div style="font-style:italic ; text-align:center ; font-size: 1.2em;" class="padding">
                                    There's no orders for today...
                                </div>
                            }
                            <div class="table-stats order-table ov-h">
                                <table class="table ">
                                    <thead>
                                        <tr>
                                            <th class="serial">ID</th>
                                            <th>Service</th>
                                            <th>Price</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td class="serial">@item.ID</td>
                                                <td>  <span class="name">@item.Service.TypeDelivery</span> </td>
                                                <td> <span class="count">@item.PriceShip</span> </td>
                                                <td>
                                                    <span class="badge badge-complete">@item.Status</span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                @if (Model.PageCount > 1)
                                {
                                    <div class="row m-0">
                                        <div class="col-sm-12">
                                            <div class="page-header float-left">
                                                <div class="page-title">
                                                    <ol class="breadcrumb text-left">
                                                        @Html.PagedListPager(Model, page => Url.Action("Index",
                                             new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter, status = ViewBag.Status }))
                                                    </ol>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div> <!-- /.table-stats -->
                        </div>
                    </div> <!-- /.card -->
                </div>  <!-- /.col-lg-8 -->
              
            </div>
        </div>
        <!-- /.orders -->
    </div>
    <!-- .animated -->
</div>
<!-- /.content -->