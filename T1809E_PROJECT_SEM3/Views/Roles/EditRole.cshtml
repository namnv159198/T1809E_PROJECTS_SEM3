@model Microsoft.AspNet.Identity.EntityFramework.IdentityUser

@{
    ViewBag.Title = "Edit User Role";
    Layout = "~/Views/Shared_Admin/_Layout.cshtml";
}

<style>
    #UserName {
        display: none;
    }
</style>
<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Account Manage</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="content">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Account List</strong>
                    </div>
                    <div class="card-body card-block">
                        @using (Html.BeginForm("EditRole", "Roles", FormMethod.Post, new { @class = "form-inline", role = "form", @name = "addRole" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                @Html.Label("User Name", new { @class = "pr-1  form-control-label" })
                                <select class="btn btn-outline-link" id="UserName" name="UserName">
                                    <option value="@Model.UserName">@Model.UserName</option>
                                </select>
                                <div class="col-4">
                                    <input class="form-control" value="@Model.UserName" disabled="disabled" />
                                </div>
                                
                            </div>
                            <div class="form-group">
                                @Html.Label("Select Role", new { @class = "px-1  form-control-label" })
                                <div class="col-md-2">
                                    @Html.DropDownList("RoleName", null, new { @class = "form-control" })
                                </div>
                            </div>
                            <br>
                                <button type="submit" class="btn btn-success btn-sm" onclick="clickSubmit()">
                                    <i class="fa fa-dot-circle-o"></i> Submit
                                </button>
                        }

                    </div>
                    
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div>
